---
# Disable documentation generation for faster gem installation
gem: --no-document

# Set gem installation path to user's home directory
gemhome: ~/.gems
gempath:
  - ~/.gems

# Additional useful settings
install: --no-document --user-install
update: --no-document --user-install

# Disable ri and rdoc documentation
rdoc: false
ri: false

# Performance optimizations
concurrent-downloads: 8
bulk_threshold: 1000

# Sources (add additional sources if needed)
sources:
  - https://rubygems.org/

# Verbose output for troubleshooting (set to false for cleaner output)
verbose: false

# Backtrace on errors (useful for debugging)
backtrace: false
