<div class="w-full max-w-xs">
  <h2 class="font-hairline mb-6 text-center">Log In</h2>
<%= render_form_for(resource, as: resource_name, url: session_path(resource_name), class: "w-full") do |form| %>
  <div class="grid grid-cols-3 items-baseline mb-4">
    <%= form.label :email, class: "text-right mr-4 text-lg" %>
    <%= form.email_field :email, autofocus: true, autocomplete: "email", class: "col-span-2" %>
  </div>
  <div class="grid grid-cols-3 items-baseline">
    <%= form.label :password, class: "text-right mr-4 text-lg" %>
    <%= form.password_field :password, autocomplete: "current-password", class: "col-span-2 mb-8" %>
  </div>
  <% if devise_mapping.rememberable? %>
    <div class="grid grid-cols-3 items-baseline">
      <p><%= form.check_box :remember_me %></p>
      <p><%= form.label :remember_me %></p>
    </div>
  <% end %>
  <div class="flex justify-center actions">
    <%= form.submit "Log In" %>
  </div>
<% end %>



<%= render "devise/shared/links" %>
</div>
